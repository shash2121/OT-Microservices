pipeline{
    agent any
    environment{
        VERSION = "${currentBuild.number}"
        CREDS = credentials('docker')
    }
    stages{
        stage("Deployment and Service Creation"){
            steps{
                dir("${env.WORKSPACE}/salary/k8s-manifests"){
                script{
                    sh 'kubectl apply -f deployment.yaml'
                }
                }
            }
        }
    }
}